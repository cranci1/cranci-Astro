---
interface Props {
  repo: string;
}

const { repo } = Astro.props;

let data = null;

async function fetchRepoData() {
  const response = await fetch(`https://api.github.com/repos/${repo}`);
  data = await response.json();
}

await fetchRepoData();

const languageColors = {
  TypeScript: "#2B7489",
  JavaScript: "#F1E05A",
  Kotlin: "#CF9FFF",
  HTML: "#DA351E",
  Java: "#B07219",
  Python: "#3572A5",
  Swift: "#EA392B",
  default: "#ccc"
};

const languageColor = data ? (languageColors[data.language] || languageColors.default) : languageColors.default;
---

<li class="card">
  {data ? (
    <a href={data.html_url} target="_blank" rel="noopener noreferrer" class="card-link">
      <div class="card-content">
        <div class="card-header">
          <img src={data.owner.avatar_url} alt={data.owner.login} class="avatar" />
          <h2 class="repo-name">{data.name}</h2>
        </div>
        <p class="description">{data.description}</p>
        <div class="footer">
          <span class="language">
            <span class="language-color" style={`background-color: ${languageColor};`}></span>
            {data.language}
          </span>
          <span class="stars">‚≠ê {data.stargazers_count}</span>
        </div>
      </div>
    </a>
  ) : (
    <p>Loading...</p>
  )}
</li>

<style>
  .card {
    background-color: #1e1e1e;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    list-style: none;
    margin-right: 5px;
    margin-top: 5px;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card-content {
    padding: 16px;
  }

  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
  }

  .avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    margin-right: 12px;
  }

  .repo-name {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
  }

  .description {
    margin: 0 0 16px;
    font-size: 14px;
    color: #a0a0a0;
    line-height: 1.4;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    color: #a0a0a0;
  }

  .language {
    display: flex;
    align-items: center;
  }

  .language-color {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    display: inline-block;
    margin-right: 6px;
  }

  .stars {
    display: flex;
    align-items: center;
  }
</style>