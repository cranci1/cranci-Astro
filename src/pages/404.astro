<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 18px;
        line-height: 1.6;
    }

    .hero-section {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.9em;
    }

    .hero-content {
        flex-grow: 1;
    }

    .container404 {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #3498db, #87cefa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .container404 a {
        color: lightskyblue;
    }

    .container404 a:hover {
        background: linear-gradient(to right, lightblue, blue);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    a:hover {
        color: transparent;
        background-image: linear-gradient(90deg, #3498db, #87cefa);
        background-clip: text;
        -webkit-background-clip: text;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    img {
        display: block;
        margin: 20px auto;
        max-width: 100%;
        height: auto;
    }
</style>
