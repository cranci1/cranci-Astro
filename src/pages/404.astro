    <main>
        <section class="hero-section">
            <img class="avatar" src={Logo.src} alt="cranci" />
            <div class="hero-content">
                <h1 class="text-3xl font-bold mt-10">
                    Hey I'm
                    <span class="text-gradient">cranci</span>
                    ðŸ‘‹
                </h1>
            </div>
        </section>

        <nav class="nav-bar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/contact">Contact</a></li>
