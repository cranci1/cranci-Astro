<style>

  main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 18px;
		line-height: 1.6;
	}
  
  .hero-section {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-right: 1rem;
    margin-top: 0.9em;
  }

  .hero-content {
    flex-grow: 1;
  }

  .instructions {
    margin-top: 2em;
  }

  .small {
    margin-bottom: 0.5rem;
    margin-top: -2em;
    font-size: 0.875rem;
    color: #718096;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.5em;
  }

  .Spotify {
      background-image: linear-gradient(90deg, #4CAF50, #9ACD32);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }

    .projects {
      background-image: linear-gradient(90deg, #FFD700, #FFA500);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }

  .text-gradient {
    background-image: linear-gradient(90deg, #3498db, #87cefa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  a {
    color: transparent;
    background-image: linear-gradient(90deg, #3498db, #87cefa);
    background-clip: text; 
    -webkit-background-clip: text;
  }

  .link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

  .spotify-widget-container {
   display: flex;
   justify-content: center;
   align-items: center;
  }

  .nav-bar {
      margin-bottom: 1rem;
    }

    .nav-bar ul {
      font-size: 1,5rem;
      list-style: none;
      padding: 0;
      display: flex;
      justify-content: space-around;
    }

    .nav-bar a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    position: relative; /* Added position relative for gradient overlay */
  }

  .nav-bar a:hover {
    color: transparent; /* Set text color to transparent on hover */
    background-image: linear-gradient(90deg, #3498db, #87cefa);
    background-clip: text; /* Clip background to text */
    -webkit-background-clip: text; /* For Safari */
  }

    .nav-line {
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, #3498db, #87cefa);
    }

</style>
</Layout>
