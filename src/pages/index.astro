---
import Layout from "../layouts/Layout.astro";

const GITHUB_TARGETS = [
    { user: "cranci1", repo: "Sora" },
    { user: "cranci1", repo: "AnimeGen" },
    { user: "cranci1", repo: "Osmium" },
    { user: "cranci1", repo: "Ryu" },
    { user: "Ultramicroscope", repo: "HuTao" },	
    { user: "cranci1", repo: "cranci.xyz-Astro" },
];

const fetchRepoDetails = async (user: string, repo: string) => {
    const response = await fetch(
        `https://api.github.com/repos/${user}/${repo}`,
    );
    return response.json();
};

const projects = await Promise.all(
    GITHUB_TARGETS.map(({ user, repo }) => fetchRepoDetails(user, repo)),
);
---

<style>
    body {
        font-family: 'Funnel Sans', sans-serif;
    }
    .text-gradient {
        background: linear-gradient(
            90deg,
            rgb(107, 96, 176),
            rgb(107, 96, 176)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .project-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>

<Layout>
    <main class="max-w-2xl mx-auto px-4 py-16">
        <header class="mb-6">
            <div class="flex items-center gap-3 mb-4">
                <img
                    src="https://avatars.githubusercontent.com/u/100066266?v=4"
                    alt="cranci"
                    class="w-16 h-16 rounded-full"
                />
                <span>
                    <h1 class="text-3xl font-bold">
                        Halo I'm
                        <span class="text-gradient">cranci</span>
                            ðŸ‘‹
                    </h1>

                    <p class="text-gray-400">swift enjoyer</p>
                </span>
            </div>
            <p class="text-gray-300">
                I'm a 15 years old boy from Italy that loves creating iOS apps
                using swift. So far my favorite thing is to scrape informations
                from sites, mostly anime sites. Other than swift I've learned
                javascript (to build Sora modules) and some Java.
            </p>
        </header>
        <section>
                <h2 class="text-2xl font-bold">Projects</h2>
                <p class="text-gray-300 mb-2">
                    Here you can find some projects im working on, all open source
                    available on GitHub.
                </p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {
                        projects.map((project) => (
                            <a
                                href={project.html_url}
                                target="_blank"
                                class="project-card block p-4 border border-gray-800 rounded-lg hover:border-gray-700 transition-colors"
                            >
                                <div>
                                    <div class="flex items-center gap-2 mb-2">
                                        <img
                                            src={project.owner.avatar_url}
                                            alt={project.owner.login}
                                            class="w-5 h-5 rounded-full"
                                        />
                                        <span class="text-sm text-gray-400">
                                            {project.owner.login}
                                        </span>
                                    </div>
                                    <h3 class="font-semibold mb-1">{project.name}</h3>
                                    <p class="text-sm text-gray-400 mb-3 line-clamp-2">
                                        {project.description}
                                    </p>
                                </div>
                                <div class="flex items-center gap-4 text-sm text-gray-400">
                                    <div class="flex items-center gap-1">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="w-4 h-4"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                                        </svg>
                                        <span>{project.stargazers_count}</span>
                                    </div>
                                    {project.language && (
                                        <div class="flex items-center gap-1">
                                            <span class="w-2 h-2 rounded-full bg-gray-400" />
                                            <span>{project.language}</span>
                                        </div>
                                    )}
                                </div>
                            </a>
                        ))
                    }
                </div>            
                <p class="text-gray-300 mb-2 text-xs mt-2 mr-2 ml-2 text-center">
					R.I.P. Ryu, (June 2024 - December 2024), taken down by Crunchyroll with a DMCA.
                </p>
        </section>
        <footer class="mt-16 text-center text-gray-500 text-xs">
            <p>Licensed under <a href="https://www.gnu.org/licenses/gpl-3.0.html" target="_blank" class="text-gradient">GPLv3.0</a> made with love</p>
        </footer>
    </main>
</Layout>