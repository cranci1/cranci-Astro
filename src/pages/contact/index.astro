<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 18px;
        line-height: 1.6;
    }

    .small {
        margin-bottom: 0.5rem;
        margin-top: -1.5em;
        font-size: 1rem;
        color: #718096;
    }

    .hero-section {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

    .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.9em;
    }

    .contact-gradient {
        background-image: linear-gradient(90deg, #008080, #00ced1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .hero-content {
        flex-grow: 1;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
    }

    .text-gradient {
        background-image: linear-gradient(90deg, #3498db, #87cefa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .nav-bar {
        margin-bottom: 1rem;
    }

    .nav-bar ul {
        font-size: 1, 5rem;
        list-style: none;
        padding: 0;
        display: flex;
        justify-content: space-around;
    }

    .nav-bar a {
        text-decoration: none;
        color: white;
        font-weight: bold;
        position: relative;
    }

    .nav-bar a:hover {
        color: transparent;
        background-image: linear-gradient(90deg, #3498db, #87cefa);
        background-clip: text;
        -webkit-background-clip: text;
    }

    .nav-line {
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, #3498db, #87cefa);
    }

    .contact-box {
        display: flex;
        justify-content: space-around;
    }

    .contact-item {
        flex-basis: calc(33.33% - 1rem);
        margin-bottom: 1.5rem;
    }

    .tags {
        display: flex;
        margin-left: -2em;
        justify-content: center;
    }

    @media (max-width: 600px) {
        .contact-box {
            flex-direction: column;
            align-items: center;
        }

        .contact-item {
            flex-basis: 100%;
        }
    }

    .contact-right {
        flex: 1;
    }

    .contact-item h3 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
        color: #6c34db;
    }

    .contact-item a {
        color: #3498db;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .contact-item a:hover {
        color: #3498db;
    }

    .contact-item p {
        color: #fff;
        margin: 0;
    }
</style>
